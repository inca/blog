doctype html
html
    head
        block title
            title= title
        link(rel="stylesheet"
            href="https://fonts.googleapis.com/css?family=EB+Garamond:400,400i,700,700i&display=optional&subset=cyrillic")
        link(rel="stylesheet"
            href="/build/index.css")
        link(
            rel="shortcut icon"
            href="/favicon.ico")
    body
        block body
        script(src="https://polyfill.io/v3/polyfill.min.js?features=es6")
        script(src="/lib/highlight.pack.js")
        script(src="/build/main.js")
        script.
            MathJax = {
                extensions: ["TeX/AMSmath.js", "TeX/AMSsymbol.js"],
                tex: {
                    inlineMath: [['%%', '%%']],
                },
            }
        script#MathJax-script(async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js")
        if !isProduction
            script(src="/build/dev.js")
