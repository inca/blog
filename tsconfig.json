{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "checkJs": false,
        "lib": [
            "DOM",
            "ES2019"
        ],
        "rootDir": "scripts",
        "outDir": "dist"
    },
    "include": [
        "scripts"
    ]
}
