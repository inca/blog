{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "description": "Boris' Blog",
  "scripts": {
    "clean": "rm -rf out dist",
    "dev": "run-p dev:*",
    "dev:server": "tsc -p ./dev && run-p dev:server:*",
    "dev:server:tscw": "tsc -w -p ./dev",
    "dev:server:nodemon": "nodemon out/dev/serve",
    "dev:css": "postcss stylesheets/index.css -w -o dist/index.css",
    "dev:js": "webpack -w",
    "webpack-hmr": "webpack serve --hot",
    "compile": "tsc -p ./dev",
    "build": "NODE_ENV=production run-s clean compile build:*",
    "build:css": "NODE_ENV=production postcss stylesheets/index.css -o dist/index.css",
    "build:js": "NODE_ENV=production webpack",
    "build:pages": "NODE_ENV=production node out/dev/scripts/build",
    "build:static": "NODE_ENV=production cp -r static/* dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inca/blog.git"
  },
  "keywords": [
    "blog"
  ],
  "nodemonConfig": {
    "delay": 500,
    "ignore": [
      "static/*",
      "dist/*",
      "src/*"
    ]
  },
  "author": "Boris Okunskiy",
  "license": "ISC",
  "dependencies": {
    "@types/d3": "^6.7.0",
    "d3-scale-chromatic": "^2.0.0",
    "simplex-noise": "^2.4.0",
    "vue": "^3.0.11"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.0",
    "@types/glob": "^7.1.1",
    "@types/koa": "^2.11.0",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.14.41",
    "@types/pug": "^2.0.4",
    "@types/ws": "^7.4.4",
    "@vue/compiler-sfc": "^3.0.11",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "css-loader": "^5.2.6",
    "debounce": "^1.2.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.3.1",
    "json5": "^2.2.0",
    "koa": "^2.11.0",
    "koa-router2": "^1.3.1",
    "koa-static": "^5.0.0",
    "marked": "^2.0.3",
    "mini-css-extract-plugin": "^1.6.0",
    "moment": "^2.24.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^5.3.0",
    "postcss-nested": "^5.0.5",
    "pug": "^3.0.2",
    "ts-loader": "^9.2.2",
    "typescript": "^4.2.4",
    "vue-loader": "^16.2.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "ws": "^7.4.6"
  }
}
